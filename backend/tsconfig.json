{
    "compilerOptions": {
        /* Base Options: */
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "es2022",
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleDetection": "force",
        "isolatedModules": true,

        /* Strictness */
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "checkJs": true,

        /* If NOT transpiling with Next.js, Bun, or Deno, add: */
        "moduleResolution": "NodeNext",
        "module": "NodeNext",
        "outDir": "dist",

        /* If your code runs in the DOM, add: */
        "lib": ["es2022", "dom", "dom.iterable"]
    },
    "include": ["./src/**/*"] // Diz ao TS para compilar tudo dentro da pasta 'src'
}
